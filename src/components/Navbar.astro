---
import { Menu } from "@lucide/astro";
import { Image } from "astro:assets";
import MemovaLogo from "../images/logo/memova_logo.webp";
---

<nav class="fixed top-0 z-50 w-full bg-white shadow-lg transition-all duration-300" id="navbar">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center space-x-3"> <Image src={MemovaLogo} loading="eager" alt="Memova Logo" class="h-10 w-auto" /></a>

      <!-- Desktop Menu -->
      <div class="hidden items-center space-x-8 md:flex">
        <a href="/#features" class="hover:text-brand text-gray-700">Funktionen</a>
        <a href="/#vorteile" class="hover:text-brand text-gray-700">Vorteile</a>
        <a href="/#preise" class="hover:text-brand text-gray-700">Preise</a>
        <a href="/#team" class="hover:text-brand text-gray-700">Über uns</a>
        <a href="/#kontakt" class="bg-brand rounded-full px-6 py-2 text-white"> Demo anfordern </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobileMenuButton" class="text-gray-700 md:hidden" aria-controls="mobileMenu" aria-expanded="false" aria-label="Mobiles Menü öffnen">
        <Menu class="text-2xl" aria-hidden="true" focusable="false" />
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden border-t bg-white md:hidden" aria-hidden="true">
    <div class="container mx-auto space-y-3 px-6 py-4">
      <a href="/#features" class="hover:text-brand block text-gray-700">Funktionen</a>
      <a href="/#vorteile" class="hover:text-brand block text-gray-700">Vorteile</a>
      <a href="/#preise" class="hover:text-brand block text-gray-700">Preise</a>
      <a href="/#team" class="hover:text-brand block text-gray-700">Über uns</a>
      <a href="/#kontakt" class="bg-brand block rounded-full px-6 py-2 text-center text-white">Demo anfordern</a>
    </div>
  </div>
</nav>
