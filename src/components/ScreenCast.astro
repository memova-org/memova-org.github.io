---
import { Picture } from "astro:assets";

interface Props {
  src: string;
  poster?: ImageMetadata;
  width?: number;
  height?: number;
  class?: string;
}

const { src, poster, width, height, class: cls = "" } = Astro.props;
---

<div class={`relative overflow-hidden ${cls}`}>
  <video
    src={src}
    autoplay
    loop
    muted
    playsinline
    width={width}
    height={height}
    poster={poster?.src}
    class="h-auto w-full"
    onplay="this.nextElementSibling?.classList.add('opacity-0')"
  >
    <source src={src} type="video/webm" />
  </video>

  {
    poster && (
      <Picture
        src={poster}
        alt="Video preview"
        width={width}
        height={height}
        loading="lazy"
        class="absolute inset-0 h-full w-full object-cover transition-opacity duration-700"
        format="webp"
      />
    )
  }
</div>
