  <section id="features-alt" class="py-20">
    <div class="container mx-auto">
      <!-- Feature 1: Image left, text right -->
      <div class="group transtion-all mb-16 flex w-full flex-col items-center rounded-lg py-10 duration-300 hover:shadow-xl md:flex-row md:px-10">
        <div class="mb-8 flex w-full justify-center md:mb-0 md:w-1/2">
          <img src="/images/screenshots/memos_read.png" alt="Digitale Dokumentation" class="w-full rounded-xl object-cover shadow-lg" />
        </div>
        <div class="w-full px-6 md:w-1/2">
          <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-lg bg-blue-100 transition-colors group-hover:bg-blue-600">
            <FileText class="text-2xl text-blue-600 group-hover:text-white" />
          </div>
          <h3 class="mb-4 text-3xl font-bold text-gray-900">Digitale Dokumentation</h3>
          <p class="mb-2 text-lg text-gray-600"
